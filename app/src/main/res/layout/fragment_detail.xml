<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable name="user" type="com.example.sample.api.qiita.model.Users" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sample.DetailFragment"
        tools:showIn="@layout/activity_detail">

        <android.support.v7.widget.CardView
            android:id="@+id/detail_card_view"
            android:layout_width="395dp"
            android:layout_height="587dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/detail_user_photo"
                    android:contentDescription="@string/avator_content_description"
                    android:src="@{user.profile_image_url}"/>

                <TextView
                    android:id="@+id/detail_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detail_user_photo"
                    android:layout_toEndOf="@+id/detail_user_photo"
                    android:textSize="30sp"
                    app:layout_constraintTop_toTopOf="@+id/detail_user_photo"
                    app:layout_constraintRight_toLeftOf="@+id/detail_description"
                    app:layout_constraintBottom_toTopOf="@+id/detail_user_photo"
                    app:layout_constraintLeft_toRightOf="@+id/detail_user_photo"
                    android:text="@{user.name}"
                    />

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_user_photo"
                    android:layout_toRightOf="@+id/detail_user_photo"
                    android:layout_toEndOf="@+id/detail_user_photo"
                    android:layout_below="@+id/detail_user_name"
                    android:textSize="30sp"
                    app:layout_constraintTop_toTopOf="@+id/detail_user_name"
                    app:layout_constraintRight_toLeftOf="@+id/detail_user_photo"
                    android:text="@{user.description}"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>
